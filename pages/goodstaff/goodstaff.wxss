/* pages/goodstaff/goodstaff.wxss */
page{
  background: #f7f7f7;
}
.listBox{
  padding: 30rpx 30rpx 0;
}
.listItem{
  display: flex;
  padding: 32rpx;
  background: #fff;
  box-shadow:0px 5px 5px 0px rgba(7,1,2,0.04);
  margin-bottom: 30rpx;
}
.listItem .infoBox{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
} 
.listItem image{
  width: 230rpx;
  height: 314rpx;
  margin-right: 20rpx;
}
.infoBox .remark,.infoBox .star{
  color: #666666;
  font-size: 22rpx;
                                
}
.infoBox .name{
  color: #333333;
  font-size: 26rpx;
}
